# Stage 1: Build dependencies
# Use RHEL10 Python 3.12 minimal base image
FROM registry.access.redhat.com/ubi10/python-312-minimal:latest AS builder

# Set working directory
WORKDIR /opt/app-root/src

# Copy requirements file (lightweight backend - no audio processing)
COPY requirements-backend.txt .

# Install dependencies (no --user flag needed for venv-based images)
RUN pip install --no-cache-dir -r requirements-backend.txt


# Stage 2: Runtime image
# Use RHEL10 Python 3.12 minimal base image
FROM registry.access.redhat.com/ubi10/python-312-minimal:latest

# Add labels for metadata (Red Hat best practice)
LABEL name="echonote-backend" \
      vendor="EchoNote" \
      version="1.0.0" \
      summary="EchoNote Voice Transcription Backend" \
      description="FastAPI backend for voice transcription using Whisper AI" \
      maintainer="echonote@example.com" \
      io.k8s.description="FastAPI backend for voice transcription" \
      io.k8s.display-name="EchoNote Backend" \
      io.openshift.tags="python,fastapi,whisper,transcription"

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PYTHONPATH="/opt/app-root/src"

# Switch to root temporarily for directory creation
USER 0

# Create base directories for application
# NOTE: No audio processing libraries needed - all audio work happens in celery workers
RUN mkdir -p /opt/app-root/src/backend /opt/app-root/src/data

# Copy Python dependencies from builder stage (entire venv)
COPY --from=builder /opt/app-root /opt/app-root

# Copy backend application code (build context is backend/)
COPY . /opt/app-root/src/backend/

# Copy entrypoint script
COPY entrypoint.sh /opt/app-root/src/entrypoint.sh

# ---- OpenShift permissions fix (MUST be after COPY) ----
# Make everything readable/writable by group 0 for random UID support
RUN chown -R 1001:0 /opt/app-root/src /opt/app-root && \
    chgrp -R 0 /opt/app-root/src /opt/app-root && \
    chmod -R g=u /opt/app-root/src /opt/app-root && \
    chmod +x /opt/app-root/src/entrypoint.sh
# ------------------------------------------------------

# Switch back to non-root user (Red Hat best practice)
USER 1001

# Set working directory
WORKDIR /opt/app-root/src

# Expose port
EXPOSE 8000

# Health check (Red Hat best practice)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/').read()" || exit 1

# Run the application with migrations
CMD ["/opt/app-root/src/entrypoint.sh"]
